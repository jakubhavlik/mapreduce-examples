<?xml version="1.0" encoding="UTF-8"?>

<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>deploy</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <baseDirectory></baseDirectory>

    <dependencySets>
        <dependencySet>
            <scope>runtime</scope>
            <outputDirectory>lib</outputDirectory>
            <excludes>
                <exclude>com.msd.gin.examples:mapreduce-skeleton</exclude>
            </excludes>
        </dependencySet>

        <dependencySet>
            <scope>runtime</scope>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>com.msd.gin.examples:mapreduce-skeleton</include>
            </includes>
            <outputFileNameMapping>mapreduce-skeleton.jar</outputFileNameMapping>
        </dependencySet>
    </dependencySets>

    <fileSets>
        <!-- Example data -->
        <fileSet>
            <directory>${project.build.directory}/test-classes/</directory>
            <outputDirectory>test/</outputDirectory>
        </fileSet>

        <fileSet>
            <directory>${basedir}/src/test/scripts</directory>
            <includes>
                <include>run_mapreduce.sh</include>
            </includes>
            <outputDirectory>/</outputDirectory>
        </fileSet>

    </fileSets>
</assembly>